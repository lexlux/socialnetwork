extends layouts/main-layout.pug

block content
    if !profileUser
        span.errorMessage Check the url you are trying to access
    else  
        script.
            var profileUserId = '!{profileUser._id}';
            var selectedTab = '!{selectedTab}';

        .tabsContainer
            +createTab("Вы подписаны", `/profile/${profileUser.username}/following`, selectedTab != "followers")
            +createTab("Подписчики", `/profile/${profileUser.username}/followers`, selectedTab == "followers")

        .resultsContainer

block scripts
    script(src="/js/followersAndFollowing.js")